{
    "name": "drakakisgeo/mailtester",
    "type": "library",
    "description": "Mail testing helper",
    "keywords": [
        "drakakisgeo",
        "mailtester"
    ],
    "homepage": "https://github.com/drakakisgeo/mailtester",
    "license": "MIT",
    "authors": [
        {
            "name": "Drakakis George",
            "email": "lolly@lollypop.gr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.0",
        "illuminate/contracts": "^5.0",
        "illuminate/support": "^5.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~7.0",
        "squizlabs/php_codesniffer": "^3.0",
        "orchestra/testbench": "~3.0",
        "swiftmailer/swiftmailer": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Drakakisgeo\\Mailtester\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drakakisgeo\\Mailtester\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}